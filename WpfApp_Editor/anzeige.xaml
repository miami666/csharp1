<Window x:Class="WpfApp_Editor.anzeige"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Editor"
        mc:Ignorable="d"
        Title="anzeige" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>
        <FlowDocumentReader Grid.Column="0" Grid.ColumnSpan="2"  Grid.Row="0" Grid.RowSpan="2" Margin="0,0,0,0" Name="FlowDocReader" Background="LightBlue" >

        </FlowDocumentReader>

    </Grid>
</Window>
