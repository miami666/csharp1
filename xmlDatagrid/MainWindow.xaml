<Window x:Class="xmlDatagrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:xmlDatagrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Name="dg" Background="LightGray" RowBackground="LightYellow" AlternatingRowBackground="LightBlue"></DataGrid>
        <Button x:Name="load" Height="20" Width="100" VerticalAlignment="Bottom" Margin="10" Click="load_Click">XML Laden</Button>

    </Grid>
</Window>
