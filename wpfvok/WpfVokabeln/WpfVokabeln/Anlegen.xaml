<Window x:Class="WpfVokabeln.Anlegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Anlegen" Height="300" Width="300">
    <StackPanel>
        <Canvas>
            <Label Canvas.Left="20" Canvas.Top="20">deutsch</Label>
            <Label Canvas.Left="100" Canvas.Top="20">spanisch</Label>
            <Label Canvas.Left="180" Canvas.Top="20">englisch</Label>
            <TextBox Name="TbDe" Canvas.Left="20" Canvas.Top="50" Width="50"></TextBox>
            <TextBox Name="TbEs" Canvas.Left="100" Canvas.Top="50" Width="50"></TextBox>
            <TextBox Name="TbGb" Canvas.Left="180" Canvas.Top="50" Width="50"></TextBox>
            <Button Name="BtInsert" Canvas.Left="20" Canvas.Top="100" Width="50" Click="BtInsert_Click">Anlegen</Button>
        </Canvas>
    </StackPanel>
</Window>
